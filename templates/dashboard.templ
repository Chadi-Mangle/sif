    <!-- JavaScript pour la fonctionnalité des pathologies et de la conduite -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const pathologiesCheckbox = document.getElementById('pathologies-checkbox');
            const pathologiesDetails = document.getElementById('pathologies-details');
            const licenseCheckbox = document.querySelector('input[name="has_license"]');
            const drivingSection = document.getElementById('driving-section');
            
            // Fonction pour gérer l'affichage du champ pathologies
            function togglePathologiesDetails() {
                if (pathologiesCheckbox.checked) {
                    pathologiesDetails.style.display = 'block';
                    pathologiesDetails.style.opacity = '0';
                    pathologiesDetails.style.transform = 'translateY(-10px)';
                    
                    // Animation d'apparition
                    setTimeout(() => {
                        pathologiesDetails.style.opacity = '1';
                        pathologiesDetails.style.transform = 'translateY(0)';
                    }, 10);
                } else {
                    // Animation de disparition
                    pathologiesDetails.style.opacity = '0';
                    pathologiesDetails.style.transform = 'translateY(-10px)';
                    
                    setTimeout(() => {
                        pathologiesDetails.style.display = 'none';
                    }, 300);
                }
            }
            
            // Fonction pour gérer l'affichage de la section conduite
            function toggleDrivingSection() {
                if (licenseCheckbox.checked) {
                    drivingSection.style.display = 'block';
                    drivingSection.style.opacity = '0';
                    drivingSection.style.transform = 'translateY(-10px)';
                    
                    // Animation d'apparition
                    setTimeout(() => {
                        drivingSection.style.opacity = '1';
                        drivingSection.style.transform = 'translateY(0)';
                    }, 10);
                } else {
                    // Animation de disparition
                    drivingSection.style.opacity = '0';
                    drivingSection.style.transform = 'translateY(-10px)';
                    
                    setTimeout(() => {
                        drivingSection.style.display = 'none';
                    }, 300);
                }
            }
            
            // Écouter les changements des checkboxes
            pathologiesCheckbox.addEventListener('change', togglePathologiesDetails);
            licenseCheckbox.addEventListener('change', toggleDrivingSection);
            
            // Initialiser l'état au chargement
            togglePathologiesDetails();
            toggleDrivingSection();

            // Gestion de la sélection des bungalows
            const bungalowCards = document.querySelectorAll('.bungalow-card');
            let selectedBungalow = null;

            function toggleBungalowMembers(bungalowNumber) {
                // Retirer la sélection précédente
                bungalowCards.forEach(card => {
                    card.classList.remove('ring-4', 'ring-blue-500', 'ring-opacity-50', 'bg-green-50', 'border-green-400', 'shadow-lg');
                    const members = card.querySelector('.bungalow-members');
                    const checkIcon = card.querySelector('.check-icon');
                    if (members) {
                        members.classList.add('hidden');
                    }
                    if (checkIcon) {
                        checkIcon.classList.add('hidden');
                    }
                });

                // Sélectionner le nouveau bungalow
                const selectedCard = document.querySelector(`[data-bungalow="${bungalowNumber}"]`);
                selectedCard.classList.add('ring-4', 'ring-blue-500', 'ring-opacity-50', 'bg-green-50', 'border-green-400', 'shadow-lg');
                
                // Afficher l'icône de validation
                const checkIcon = selectedCard.querySelector('.check-icon');
                if (checkIcon) {
                    checkIcon.classList.remove('hidden');
                }
                
                // Afficher/masquer les membres
                const members = selectedCard.querySelector('.bungalow-members');
                if (members) {
                    if (members.classList.contains('hidden')) {
                        members.classList.remove('hidden');
                        selectedBungalow = bungalowNumber;
                    } else {
                        members.classList.add('hidden');
                        selectedBungalow = null;
                    }
                }
            }

            // Ajouter les événements de clic
            bungalowCards.forEach(card => {
                card.addEventListener('click', function() {
                    const bungalowNumber = parseInt(this.dataset.bungalow);
                    toggleBungalowMembers(bungalowNumber);
                });
            });
        });
    </script>
    }
